<%= render "shared/second-header"%>

<div class="items-sell-contents">
  <div class="items-sell-main">
    <h2 class="items-sell-title">投稿内容を入力</h2>
    <%= form_with(model: @proto, local: true) do |f| %>

    <%# <%= render 'shared/error_messages', model: f.object %> 
    <%# 商品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        商品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /商品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        title
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"items-text", id:"title", placeholder:"title（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          投稿の説明
          <%# <span class="indispensable">必須</span> %>
        </div>
        <%= f.text_area :post_text, class:"items-text", id:"post-info", placeholder:"投稿の説明（必須 1,000文字まで）例）サウナしきじに行ってきました。こちらのサウナは水風呂の水が富士山の天然水なのでそのまま飲むことができます。また椅子は全部で９つあり、ベンチが２つあります。",rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="weight-bold-text">投稿の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          サウナの室温
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:sauna_id, Sauna.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          水風呂の水温
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:cold_bath_id, ColdBath.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
        <div class="weight-bold-text">
          ロウリュ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:loury_id, Loury.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
        <div class="weight-bold-text">
          オートロウリュ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:auto_loury_id, AutoLoury.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
        <div class="weight-bold-text">
          セルフロウリュ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:self_loury_id, SelfLoury.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
        <div class="weight-bold-text">
          外気浴
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:outside_id, Outside.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
        <div class="weight-bold-text">
          整いスペース
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:invigorate_id, Invigorate.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
        <div class="weight-bold-text">
          給水機
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:water_id, Water.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>
    <%# /商品の詳細 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "変更する" ,class:"sell-btn" %>
      <%=link_to 'もどる', proto_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>
</div>

<%= render "shared/footer" %>